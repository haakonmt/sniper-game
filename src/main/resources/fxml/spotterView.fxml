<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<HBox fx:controller="no.social.snipergame.controller.SpotterController" xmlns:fx="http://javafx.com/fxml">
    <VBox alignment="CENTER" spacing="10" prefWidth="320">
        <padding>
            <Insets bottom="10" top="10" left="10" right="10"/>
        </padding>
        <HBox alignment="CENTER" spacing="10">
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Time:"/>
                <Label text="Wind:"/>
                <Label text="Coordinates:"/>
            </VBox>
            <VBox alignment="CENTER" spacing="10">
                <Label fx:id="time"/>
                <Label fx:id="wind"/>
                <Label fx:id="coordinates"/>
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label/>
                <Button text="Send wind information" onAction="#sendWind"/>
                <Button text="Send coordinates" onAction="#sendCoordinates"/>
            </VBox>
        </HBox>
        <TextArea fx:id="chat" editable="false" wrapText="true"/>
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="chatField" prefWidth="220"/>
            <Button textAlignment="CENTER" prefWidth="80" text="Send text" onAction="#sendText"/>
        </HBox>
    </VBox>
    <Pane fx:id="background"/>
</HBox>